<p class="h2 mt-2 text-dark text-center">Burger Menu</p>

<div class="container">
    <div class="row">
        <div class="col-lg-6 text-center" id="notEaten">
            <p class="h2 mt-2">Currently availible</p>
            {{#each burger}}
            {{#unless isEaten}}
            {{>burgers/burger-block isEaten=true}}
            {{/unless}}
            {{/each}}
        </div>

        <div class="col-lg-6 text-center">
            <p class="h2 mt-2">Eaten</p>

        </div>
    </div>
    <div class="row mt-5">
        <div class="col lg-4"></div>
        <div class="col-lg-4 align-center">
            <div class="text-center bg-secondary rounded">
                <h2 class="text-center mt-2">Make a Burger!</h2>
                <form class="make-burger">
                    <div class="form-group">
                        <label for="burg">Burger Name:</label>
                        <input type="text" id="burg" name="name">
                    </div>
                    <button class="m-3 rounded"type="submit">Make Burger</button>

                </form>
            </div>
        </div>
        <div class="col-lg-4"></div>

    </div>
</div>